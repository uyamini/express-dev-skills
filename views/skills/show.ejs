<!-- views/skills/shows.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title><%= skill.name %> - Developer Skill</title>
</head>
<body>
    <a href="/">Home</a>
    <a href="/skills">All Skills</a>
    <h3><%= skill.name %></h3>
    <p>Level: <%= skill.level %></p>

    <form action="/skills/<%= skill.id %>?_method=DELETE" method="POST">
        <button type="submit">Delete Skill</button>
      </form>
      <a href="/skills/<%= skill.id %>/edit">Edit Skill</a>      
</body>
</html>